<h1></h1>
<div class="jumbotron">
	<img src="/img/logo.png" class="rounded mx-auto d-block" alt="EKT group" width="100">
	<div class="container d-flex flex-column align-items-center">
		<h4 class="display-4">АНКЕТА КАНДИДАТА</h4>
		<p class="lead">№ <%= @candidate.guid %></p>
	</div>
</div>

<form action="<%= "/candidates/#{@candidate.guid}" %>" method="POST" enctype="multipart/form-data">
	<input name="_method" type="hidden" value="patch" />
	<div class="card" hidden="true">
		<div class="card-body">
			<input class="form-control" type="text"  name="candidate[guid]" id="candidate_guid" value=<%= @candidate.guid %>>
			<input class="form-control" type="text"  name="candidate[created_at]" id="candidate_created_at" value=<%= @candidate.created_at %>>
		</div>
	</div>

	<%= erb :'candidates/_position' %><br>

	<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success active" id="pills-general-information-tab" data-toggle="pill" href="#pills-general-information" role="tab" aria-controls="pills-home" aria-selected="true">Общие сведенья</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success" id="pills-education-tab" data-toggle="pill" href="#pills-education" role="tab" aria-controls="pills-profile" aria-selected="false">Образование</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success" id="pills-skills-tab" data-toggle="pill" href="#pills-skills" role="tab" aria-controls="pills-contact" aria-selected="false">Навыки</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success" id="pills-experience-tab" data-toggle="pill" href="#pills-experience" role="tab" aria-controls="pills-contact" aria-selected="false">Опыт</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success" id="pills-recommendations-tab" data-toggle="pill" href="#pills-recommendations" role="tab" aria-controls="pills-contact" aria-selected="false">Реккомендации</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link btn-outline-success" id="pills-additional-information-tab" data-toggle="pill" href="#pills-additional-information" role="tab" aria-controls="pills-contact" aria-selected="false">Дополнительно</a>
		</li>
	</ul>
	<div class="tab-content" id="pills-tabContent">
		<div class="tab-pane fade show active" id="pills-general-information" 	 role="tabpanel" aria-labelledby="pills-general-information-tab"	><%= erb :'candidates/_general_information' %></div>
		<div class="tab-pane fade" 			   id="pills-education" 			 role="tabpanel" aria-labelledby="pills-education-tab"				><%= erb :'candidates/_education' %></div>
		<div class="tab-pane fade" 			   id="pills-skills" 				 role="tabpanel" aria-labelledby="pills-skills-tab"					><%= erb :'candidates/_skills' %></div>
		<div class="tab-pane fade" 			   id="pills-experience" 			 role="tabpanel" aria-labelledby="pills-experience-tab"				><%= erb :'candidates/_experience' %></div>
		<div class="tab-pane fade" 			   id="pills-recommendations" 		 role="tabpanel" aria-labelledby="pills-recommendations-tab"		><%= erb :'candidates/_recommendations' %></div>
		<div class="tab-pane fade" 			   id="pills-additional-information" role="tabpanel" aria-labelledby="pills-additional-information-tab"	><%= erb :'candidates/_additional_information' %></div>
	</div>
</form>

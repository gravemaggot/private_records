<h5>Candidates list (last)</h5>

<a href="/candidates/new" class="btn btn-primary" role="button" aria-pressed="true">Новый кандидат</a>

<% @candidates.map do |candidate| %>
  <% if candidate %>
    <div class="card">
      <div class="form-row">
        <div class="form-group col-md-4">
          <img class="img-fluid" src= <%="/uploads/#{candidate.image_identifier}" if candidate[:image_identifier] %> /> 
        </div>
        <div class="form-group col-md-8">
          <%= candidate.to_json %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
